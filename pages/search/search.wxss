@import '../../components/mystar/mystar.wxss';
@import '../../components/storeitem/storeitem.wxss';
page{
    background-color: #f0f0f0;
}

.search{
    background-color: #fff;
    margin: 20rpx 40rpx;
    border-radius: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
    flex-wrap: nowrap;
    padding: 0 30rpx;
    vertical-align: middle;
    align-items: center;
}

.search icon{
margin-right: 10rpx;
height: 18px;
}
.search input{
    flex: 1;
    vertical-align: middle;
    height: 70rpx;
      display: inline-block;
      font-size: 26rpx;
}

.navbtns{
    display: flex;
    height: 80rpx;
    flex-wrap: nowrap;
    flex-direction: row;
    align-items: center;
    background-color: #ffffff;
}

.navbtns .navitem{
    flex: 1;
    text-align: center;
    color: #777777;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
}
.navbtns .navitem image{
    display: inline-block;
    width: 26rpx;
    height: 26rpx;
    margin-left: 6rpx;
    vertical-align: middle;
}

.navbtns .line{
width: 3rpx;
background-color: #aaaaaa;
height: 45rpx;
flex-shrink: 0;
}

.wrap{
    position: relative;
}

.wrap .spinner{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .6);
    z-index: 10;
    top: 0;
    left: 0;
}

.wrap .spinner .items{
    background-color: #fff;
    padding-left: 20rpx;
    max-height: 600rpx;
    overflow-y: scroll;
}

.wrap .spinner .items .item{
  padding-left: 25rpx;
  border-bottom: 1rpx solid #777777;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
}
.scroller{
    margin-top: -5rpx;
}
.goods {
  padding: 20rpx 0;
  background:#fff;
}
.goodswrap {
  background: #fff;
}
.priceBtn {
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  right: 1%;
  top: 30%;
  border-radius:50%;
  background:#fce8cb;
  text-align: center;
  font-size: 26rpx;
  line-height: 30rpx;
  color:#fff;
  display:block;
  padding: 20rpx;
  z-index:99;
}
.priceBox{
  position: fixed;
  background: rgba(0,0,0,.8);
  width:100%;
  height:100%;
  left:0;
  top:0;
  z-index:99;
}
.priceBoxIn{
  width: 60%;
  margin:42% auto;
}
.priceBoxInP {
  color: #666;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #fff;
  margin-top: 30rpx;
}
.priceBoxInput {
  height: 80rpx;
  background: #fff;
  border-radius:10rpx;
  font-size: 26rpx;
  padding-left: 15rpx;
}
.surePrice{
  width:45%;
  height: 80rpx;
  background:#fce8cb;
  text-align: center;
  line-height: 80rpx;
  border-radius: 15rpx;
  color:#fff;
  float: right;
  font-size:26rpx;
  margin-top:40rpx;
  margin: 80rpx auto

}
.fl {
  float: left;
  background: #ccc;
  color: #666;
}
.fr {
  float: right;
}
.loadMoreP {
  text-align: center;
  color: #666;
  background: #fff;
  font-size: 30rpx;
  margin-top: 10rpx;
  line-height: 55rpx;
}
.noMoreP {
  text-align: center;
  color: #666;
  font-size: 30rpx;
  margin-top: 10rpx;
  line-height: 55rpx;
}